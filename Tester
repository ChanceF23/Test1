// ==UserScript==
// @name        VortexScript
// @namespace   http://localhost
// @description auto pokemon finder
// @include     http://zeta.pokemon-vortex.com/map.php?map=*
// @include     http://theta.pokemon-vortex.com/map.php?map=*
// @require     http://code.jquery.com/jquery-2.1.4.js
// @version     1.0
// @grant       none
// ==/UserScript==

var state = Math.round((Math.random()))
//var wanted = ["Bulbasaur", "Charmander", "Squirtle", "Shadow", "Dark", "Shiny", "Mystic"]
var wanted = ["Shiny Charmander", "Dark Onix", "Shiny Onix", "Shiny Vanillite", "Dark Vanillite", "Shiny Mantyke", "Dark Mantyke", "Shiny", "Shiny Pidgey"]
var banned = ["Unown"]

start()

function start() {
  console.log("started")
  setTimeout(function() {
    checkPokemon()
  }, 3000);
}

function checkPokemon(){
  setTimeout(function() {
    var exists = document.querySelectorAll('#pkmnappear p')
    if (exists.length != 0) {
      if (checkIfWanted(exists[0].innerHTML)) {
        console.log(exists[0].innerHTML)
        beep()
        if (confirm("do you want it ?")){
          // do nothing
        } else {
          move()
        }
      } else {
        move()
      }
    } else {
      //console.log("pokemon does not exist")
      move()
    }
    
  },400);
}

function move() {
  setTimeout(function() {
    var rightURL = "http://static.pokemon-vortex.com/images/maps/arrows/arrowright.gif"
    var leftURL = "http://static.pokemon-vortex.com/images/maps/arrows/arrowleft.gif"
    var imgs = document.querySelectorAll('img')
    var leftImage, rightImage
    for (var i= 0; i < imgs.length; i++) {
      var img = imgs[i]
      if (img.getAttribute("src") == leftURL ){
        leftImage = img
      }      
      if (img.getAttribute("src") == rightURL){
        rightImage = img
      } 
   }
    if (leftImage != null && state == 0) {
      leftImage.click()
    } else if (leftImage == null) {
      state = 1
    }
    
    if (rightImage != null && state == 1) {
      rightImage.click()
    } else if (rightImage == null) {
      state = 0
    }
    
    
    checkPokemon()
  }, 400);
}

function checkIfWanted(title) {
  
  for(var i= 0; i < banned.length; i++){
    var unwanted = banned[i]
    if (title.includes(unwanted)){
      return false
    }
  }
  
  for (var i= 0; i < wanted.length; i++){
    var tag = wanted[i]
    if (title.includes(tag)){
      return true
    }
  }
  return false
}

function beep() {
    var snd = new Audio("data:audio/wav;base64,");  
    snd.play();
}
